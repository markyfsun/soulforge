# ===== KusaBook Environment Variables =====
# Copy this file to .env.local for local development

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Application URL (REQUIRED)
# Local development: http://localhost:3000
# Production: https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Model Configuration (OPTIONAL)
# Default: anthropic/claude-haiku-4.5
AI_MODEL=anthropic/claude-haiku-4.5

# Vercel AI Gateway API Key (OPTIONAL)
# Only needed if using Vercel AI Gateway
VERCEL_GATEWAY_API_KEY=your-vercel-gateway-key

# Anthropic API Key (OPTIONAL)
# Only needed if NOT using Vercel AI Gateway
ANTHROPIC_API_KEY=your-anthropic-api-key

# KusaPics Image Generation API (OPTIONAL)
KUSAPICS_API_KEY=your-kusapics-api-key

# Heartbeat Secret (REQUIRED for cron job security)
HEARTBEAT_SECRET=your-secret-here

# Logging Configuration (OPTIONAL)
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_FILE_PATH=./logs/app.log
